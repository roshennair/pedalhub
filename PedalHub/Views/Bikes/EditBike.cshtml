@model Bike
@{
    ViewData["Title"] = "Edit Bike";
}

<center>
    <h1>Edit Bike</h1>
    <hr />
    <div class="row">
        <form asp-action="Edit" asp-controller="Bikes" method="post" enctype="multipart/form-data">
            <img src="@Model.ImageURL" style="max-width: 24rem;" class="mb-3" />
            <table>
                <tr style="display: none">
                    <th><label asp-for="Id"></label>:</th>
                    <td><input asp-for="Id" readonly /></td>
                </tr>
                <tr style="display: none">
                    <th><label asp-for="ImageURL"></label>:</th>
                    <td><input asp-for="ImageURL" readonly /></td>
                </tr>
                <tr style="display: none">
                    <th><label asp-for="ImageKey"></label>:</th>
                    <td><input asp-for="ImageKey" readonly /></td>
                </tr>
                <tr>
                    <th><label asp-for="Name"></label>:</th>
                    <td>
                        <input asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th><label asp-for="DailyRentalPrice"></label>:</th>
                    <td>
                        <input asp-for="DailyRentalPrice" />
                        <span asp-validation-for="DailyRentalPrice" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th><label asp-for="AvailableUnits"></label>:</th>
                    <td>
                        <input asp-for="AvailableUnits" min="1" />
                        <span asp-validation-for="AvailableUnits" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th colspan="2" class="">
                        <div class="d-flex flex-column">
                            <button type="submit" class="mt-3 btn btn-success">Edit</button>
                        </div>
                    </th>
                </tr>
                <tr>
                    <th colspan="2" class="">
                        <div class="d-flex flex-column">
                            <a asp-controller="Bikes" asp-action="Index" class="mt-1 btn btn-danger">Cancel</a>
                        </div>
                    </th>
                </tr>
            </table>
        </form>
    </div>
</center>
