@model Bike
@{
    ViewData["Title"] = "Add New Bike";
}

<center>
    <h1>Add New Bike</h1>
    <hr />
    <div class="row">
        <form asp-action="Add" asp-controller="Bikes" method="post" enctype="multipart/form-data">
            <table>
                <tr>
                    <th><label asp-for="Name"></label>:</th>
                    <td>
                        <input asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th><label asp-for="DailyRentalPrice"></label>:</th>
                    <td>
                        <input asp-for="DailyRentalPrice" />
                        <span asp-validation-for="DailyRentalPrice" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th><label asp-for="AvailableUnits"></label>:</th>
                    <td>
                        <input asp-for="AvailableUnits" min="1" />
                        <span asp-validation-for="AvailableUnits" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th><label asp-for="ImageURL"></label>:</th>
                    <td>
                        <input type="file" name="imageFile" accept="image/*" required />
                    </td>
                </tr>
                <tr>
                    <th colspan="2" class="">
                        <div class="d-flex flex-column">
                            <button type="submit" class="mt-3 btn btn-success">Add</button>
                        </div>
                    </th>
                </tr>
                <tr>
                    <th colspan="2" class="">
                        <div class="d-flex flex-column">
                            <a asp-controller="Bikes" asp-action="Index" class="mt-1 btn btn-danger">Cancel</a>
                        </div>
                    </th>
                </tr>
            </table>
        </form>
    </div>
</center>
