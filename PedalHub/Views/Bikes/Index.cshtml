@model List<Bike>
@{
    ViewData["Title"] = "Bikes";
}

<center>
    <h1>Bikes</h1>
    <hr />
    @if (Model.Count == 0)
        {
            <p class="text-center">No bikes found.</p>
        }
        else
        {
            <div class="container mt-3" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 10px;">
        
                    @foreach (var bike in Model)
                    {
                        <div class="p-4" style="max-width: 24rem; border: 1px solid grey; display: flex; flex-direction: column; justify-content: space-between;">
                            <img src="@bike.ImageURL" style="width: 100%; height: auto; display: block;" />
                            <div>
                                <h4>@bike.Name</h4>
                                <div>
                                    <b>Daily rental price (RM):</b> @bike.DailyRentalPrice
                                </div>
                                <div>
                                    <b>Available units:</b> @bike.AvailableUnits
                                </div>
                                <a class="btn btn-primary mt-2" asp-controller="Bikes" asp-action="ReserveBike" asp-route-id="@bike.Id">Reserve</a>
                            </div>
                        </div>
                    }
        
            </div>
    }
</center>