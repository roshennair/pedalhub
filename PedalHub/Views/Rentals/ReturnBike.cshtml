@model Rental
@{
    ViewData["Title"] = "Return Bike";
}

<center>
    <h1>Return Bike</h1>
    <hr />
    <div class="row">
        <form asp-action="CalculatePayment" asp-controller="Rentals" method="post">
            <table>
                <tr style="display: none;">
                    <td><input asp-for="Id" readonly /></td>
                </tr>
                <tr style="display: none;">
                    <td>
                    <input asp-for="UserId" readonly />
                    </td>
                </tr>
                <tr style="display: none;">
                    <td>
                    <input asp-for="BikeId" readonly />
                    </td>
                </tr>
                <tr style="display: none;">
                    <td>
                    <input asp-for="CreatedAt" readonly />
                    </td>
                </tr>
                <tr style="display: none;">
                    <td>
                    <input asp-for="IsOngoing" readonly />
                    </td>
                </tr>
                <tr style="display: none;">
                    <td>
                    <input asp-for="TotalPrice" readonly />
                    </td>
                </tr>
                <tr>
                    <th><label asp-for="Duration"></label>:</th>
                    <td>
                        <input asp-for="Duration" min="1" required />
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th colspan="2" class="">
                        <div class="d-flex flex-column">
                            <button type="submit" class="mt-3 btn btn-success">Continue to payment</button>
                        </div>
                    </th>
                </tr>
                <tr>
                    <th colspan="2" class="">
                        <div class="d-flex flex-column">
                            <a asp-controller="Rentals" asp-action="Index" class="mt-1 btn btn-danger">Cancel</a>
                        </div>
                    </th>
                </tr>
            </table>
        </form>
    </div>
</center>